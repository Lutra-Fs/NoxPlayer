{
  "name": "电闹播放器",
  "version": "1.0.0.1",
  "description":"电闹播放器 / nox-player: 第三方b站播放器威力加强版，魔改自阿梓播放器 / 3rd party Bilibili audio player modified from Azusa-player.",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/logo2-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/contentscript.js"]
    }
  ],
  "icons": {
    "128": "icons/logo2-128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*.acgvideo.com/*",
    "*://*.bilivideo.com/*",
    "*://*.bilibili.com/*",
    "*://*.hdslb.com/*",
    "*://*.cgvideo.com/*",
    "*://*.y.qq.com/*",
    "*://*.bilivideo.cn/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
